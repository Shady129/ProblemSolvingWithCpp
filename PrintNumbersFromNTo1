// Create a C++ program that follows the Single Responsibility Principle.
// The program should read an integer from the user, generate numbers from N to 1,
// store them in a vector, and print the result using separate functions.


#include <iostream>
#include <vector>

using namespace std;



int ReadNumber()
{
	int Number;

	cout << "Enter the number: ";
	cin >> Number;


	return Number;
}




vector<int> GenerateNumbersFromNTo1(int Number)
{

	vector<int> Numbers;



	for (int i = Number; i >= 1; i--)
	{

		Numbers.push_back(i);
	}
	
	return Numbers;

}


void PrintNumbers(const vector<int>& Numbers)
{

	for (int num : Numbers)
	{

		cout << num << endl;

	}

}



void RunCode()
{

	int Number = ReadNumber();
	
	vector <int> Numbers =  GenerateNumbersFromNTo1(Number);

	PrintNumbers(Numbers);
}


int main()
{
	RunCode();

	return 0;
}





